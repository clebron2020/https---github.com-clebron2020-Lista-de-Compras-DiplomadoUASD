<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".View.Products">
    <RelativeLayout  android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:id="@+id/LinearSuperMarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/btnIconSuperMarket"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/almacenar" />
            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spSupermarkets"
                android:layout_width="318dp"
                android:layout_height="57dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:layout_toEndOf="@+id/btnIconSuperMarket"
                android:layout_toRightOf="@+id/btnIconSuperMarket"
                android:hint="Supermercado"
                android:textColorHint="#CFD8DC"
                app:met_floatingLabel="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnCancelList"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <ImageView
                    android:id="@+id/btnAdd"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_playlist_add_black_24dp" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_above="@+id/Footer"
            android:layout_below="@+id/LinearSuperMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <GridView
                    android:id="@+id/lvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="1">
                </GridView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Footer"
            android:background="#AA880E"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/spmarket"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTotalProducts"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorwhite"
                    android:text="0 Productos"
                    android:layout_width="150dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/txtTotalInCar"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorwhite"
                    android:text="0 en el carrito"
                    android:layout_width="150dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/txtTotalPagar"
                    android:layout_gravity="top"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/colorwhite"
                    android:text="Total a pagar : $ 0.00"
                    android:layout_width="150dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>